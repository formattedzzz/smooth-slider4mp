.page {
  width: 100%;
}
.move-area {
  width: 750rpx;
  height: 128rpx;
  background: #ccc;
  overflow: hidden;
  border-bottom: 1rpx solid #ccc;
}
.move-view {
  height: 128rpx;
  background: #fff;
  position: relative;
}
.move-view .slide-btn {
  height: 128rpx;
  position: absolute;
  top: 0;
  line-height: 128rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}
.move-view .formal-content {
  width: 750rpx;
  height: 128rpx;
  box-sizing: border-box;
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
}
.move-view .formal-content .con-l {
  width: 100rpx;
  height: 100%;
  flex-shrink: 0;
}
.move-view .formal-content .con-l image {
  width: 100%;
  height: 100%;
}
.move-view .formal-content .con-m {
  /* flex-grow: 1; */
  /* flex-shrink: 1; */
  padding-left: 20rpx;
  width: 572rpx !important;
}
.move-view .formal-content .con-m .con-mt {
  width: 100%;
  font-size: 32rpx;
  color: #222;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.move-view .formal-content .con-m .con-mb {
  width: 100%;
  font-size: 28rpx;
  color: #777;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 3px;
}
.move-view .formal-content .con-r {
  width: 144rpx!important;
  flex-shrink: 0;
  text-align: right;
}
.move-view .formal-content .con-r .con-rt {
  font-size: 24rpx;
  color: #9b9b9b;
  padding-bottom: 8rpx;
}
.move-view .formal-content .con-r .con-rb {
  width: 28rpx;
  height: 28rpx;
}
